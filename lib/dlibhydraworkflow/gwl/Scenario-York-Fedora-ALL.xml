<?xml version="1.0" encoding="UTF-8"?>
<wf:workflow xmlns:wf="http://dlib.york.ac.uk/workflow">
    <wf:scenario id="York-Fedora-ALL"
                 inherits=""
                 affiliate="York"
                 repository="Fedora"
                 model="ALL"
				 abstract="true">

        <!-- File processing logic for unknown mimes -->
        <wf:fileprocessor mime="application/octet-stream">
            <wf:addorupdatefileobject pid="$NEWPID" replaceexisting="false"/>
            <wf:removefile/>
        </wf:fileprocessor>

        <!-- generic post-process -->     
        <wf:generic-postprocess>
			<!-- commands listed within preprocess should not require file information from client -->
			<!-- this command can be put in the parent scenario as the thumbnails being used is different for different content models -->
			<!-- Although the assurethumbnail command requires the information about content model,  -->
            <wf:assurethumbnail />
            
			<!-- add or update WORKFLOW datastream  -->
			<wf:addorupdateworkflowstatus wfstate="added/updated."/>
        </wf:generic-postprocess>

    </wf:scenario>
</wf:workflow>
